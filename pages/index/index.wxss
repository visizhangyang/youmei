/* pages/index/index.wxss */
.search{
  width: 100%;
  height: 88rpx;
  padding: 0 30rpx;
  background: #fff;
  direction: flex;
  align-items: center;
}

.search .input{
  width: 690rpx;
  height: 56rpx;
  background: #ededed;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 12rpx;
}

.search .icon{
  background: url(http://yanxuan.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/search2-2fb94833aa.png) center no-repeat;
  background-size: 100%;
  width: 28rpx;
  height: rpx;
}

.search .txt{
  height: 42rpx;
  line-height: 42rpx;
  color: #666;
  padding-left: 10rpx;
  font-size: 24rpx;
}

.banner{
  width: 750rpx;
}

.banner swiper{
  height: 400rpx;
}

.banner image{
  width:100%;
}

.m-menu{
  display: flex;
  height: 181rpx;
  width: 750rpx;
  flex: row nowrap;
  align-items: center;
  justify-content: space-between;
  background: #fff;
}

.m-menu .item{
  flex: 1;
  display: block;
  padding: 20rpx 0;
}

.m-menu image{
  display: block;
  width: 68rpx;
  height: 68rpx;
  margin: 0 auto;
  margin-bottom: 10rpx;
}

.m-menu text{
  display: block;
  font-size: 24rpx;
  text-align: center;
  margin: 0 auto;
  line-height: 1;
  color: #333333
}

.a-section{
  width: 750rpx;
  height: auto;
  overflow: hidden;
  color: #333333;
  margin-top: 20rpx;
}

.a-section .h{
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: center;
  height: 130rpx;
}

.a-section .h .txt{
  padding-right: 30rpx;
  display: inline-block;
  height: 36rpx;
  font-size: 34rpx;
  line-height: 33rpx;
}

.a-brand .b{
  width: 750rpx;
  height: auto;
  overflow: hidden;
  position: relative;
}

.a-brand .wrap{
  position: relative
}

.a-brand .img{
  position: absolute;
  left:0;
  top:0;
}

.a-brand .mt{
  position: absolute;
  left:0;
  top:0;
  z-index: 2;
  padding:27rpx 30rpx;
}

.a-brand .mt .brand{
  display: block;
  font-size: 33rpx;
  height: 43rpx;
  color: #333333;
}

.a-brand .mt .price{
  font-size: 25rpx;
  color: #999999;
}

.a-brand .item-1{
  float: left;
  width: 375rpx;
  height: 252rpx;
  overflow: hidden;
  border-top:1rpx solid #fff;
  margin-left:1rpx;
}

.a-brand .item-1:nth-child(3){
  border-bottom: 1rpx solid #fff;
  border-right: 1rpx solid #fff;
}

.a-brand .item-1:nth-child(4){
  border-bottom: 1rpx solid #fff;
}

.a-brand .item-1:nth-child(2n+1){
  margin-left:0;
  width: 374rpx;
}

.a-brand .item-1 .img{
  width: 375rpx;
  height: 253rpx;
}

.a-popular {
  width: 750rpx;
  height: auto;
  overflow: hidden;
}

.a-popular .b .item {
  border-top: 1px solid rgba(0, 0, 0, .05);
  margin: 0 20rpx;
  height: 264rpx;
  width: 710rpx;
}

.a-popular .b .img {
  margin-top: 12rpx;
  margin-right: 12rpx;
  float: left;
  width: 240rpx;
  height: 240rpx;
}

.a-popular .b .right {
  float: left;
  height: 264rpx;
  width: 456rpx;
  display: flex;
  flex-flow: row nowrap;
}

.a-popular .b .text {
  display: flex;
  flex-wrap: nowrap;
  flex-direction: column;
  justify-content: center;
  overflow: hidden;
  height: 264rpx;
  width: 456rpx;
}

.a-popular .b .name {
  width: 456rpx;
  display: block;
  color: #333333;
  line-height: 50rpx;
  font-size: 30rpx;
}

.a-popular .b .desc {
  width: 456rpx;
  display: block;
  color: #999999;
  line-height: 50rpx;
  font-size: 25rpx;
}

.a-popular .b .price {
  width: 456rpx;
  display: block;
  color: #d32f34;
  line-height: 50rpx;
  font-size: 33rpx;
}

.a-topic .b{
  height: 533rpx;
  width: 750rpx;
  padding:  0 0 48rpx 0;
}

.a-topic .b .list{
  height: 533rpx;
  width: 750rpx;
  white-space: nowrap;
}

.a-topic .b .item{
  display: inline-block;
  height: 533rpx;
  width: 680rpx;
  margin-left:30rpx;
  overflow: hidden
}

.a-topic .b .item:last-child {
  margin-right: 30rpx;
}

.a-topic .b .img{
  height: 387rpx;
  width: 680rpx;
  margin-bottom: 30rpx;
}

.a-topic .b .np{
  height: 35rpx;
  margin-bottom: 20rpx;
}

.a-topic .b np .price{
  margin-left: 20rpx;
  color:#d32f34;
}

.a-topic .b .desc{
  display: block;
  height: 30rpx;
  color: #999999;
  font-size: 24rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.itemStyle{
  color: red;
  font-size: 35rpx;
}